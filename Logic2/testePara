Algoritmo "testePara"
// para variavel de valor_inicial ate valor_final [passo N] faca
//    comando 1
//    comando 2
// fimpara

Var
   num, n, soma: inteiro

Inicio
   escreva("Quantos números de 0 à 9 serão digitados?")
   leia(num)

   para num de 1 ate num faca
      escreva("Digite um numero: ")
      leia(n)
      soma <- n + soma
   fimpara

   escreval("SOMA = ", soma)
   

Fimalgoritmo
