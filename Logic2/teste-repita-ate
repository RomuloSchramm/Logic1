Algoritmo "teste-repita-ate"

Var
   C, F: real
   resp: caractere

Inicio
// C=(5/9)*(F-32)

   repita
      escreval("Digite a temperatura em Celsius: ")
      leia(C)
      F <- 9*C/5+32
      escreva("Equivalente em Fahrenheit: "), F:3:1)
      escreva("Deseja repetir (s/n)? ")
      leia(resp)
   ate resp <> "s"

Fimalgoritmo
